<Window x:Class="scc.Historial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scc"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Height="500" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <materialDesign:Card>

            <Grid>

                <GroupBox Header="HISTORIAL MEDICO" HorizontalAlignment="Left" Height="500" Width="800" VerticalAlignment="Top" RenderTransformOrigin="-3.102,0.759">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                           Margin="30,0,0,0"
                           FontSize="25"
                           FontWeight="UltraBold"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock
                                    }"
                           Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                </GroupBox>
                <Button 
                    x:Name="btnBuscarPaciente"
                    Click="btnBuscarPaciente_Click"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Width="90"
                        FontSize="19"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" 
                        Margin="300,105,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="28" Content="Buscar"/>
                <TextBlock 
                    x:Name="txtBlockFechaIngreso"
                    FontWeight="UltraBold"
                    FontSize="15"
                    VerticalAlignment="Top"
                    Margin="20,67,381,0">
               
                    Fecha Ingreso
                </TextBlock>
                <!--TEXTBOX BUSCAR PACIENTE-->
                <TextBox
                    
                    x:Name="txtBuscarPaciente"
                    materialDesign:HintAssist.Hint="Buscar Paciente Identidad"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Top"
                    Height="45" 
                    FontSize="15" 
                    Margin="20,88,518,0"/>
                <TextBlock 
                    x:Name="tbNombrePaciente"
                    FontSize="15"
                    FontWeight="UltraBold"
                    VerticalAlignment="Top"
                    Margin="18,146,383,0">

                </TextBlock>
                <TextBlock
                    x:Name="tbEdadPaciente"
                    FontSize="15"
                    FontWeight="UltraBold"
                    VerticalAlignment="Top"
                    Margin="20,173,381,0">

                </TextBlock>

                <TextBox
               
                    materialDesign:HintAssist.Hint="Motivo de Consulta"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Top"
                    Height="45" 
                    FontSize="15" Margin="16,195,385,0"/>
                <TextBox
               
                    materialDesign:HintAssist.Hint="Antecedentes"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Top"
                    Height="45" 
                    FontSize="15" Margin="14,243,387,0"/>
                <TextBox
             
                    materialDesign:HintAssist.Hint="Tratamiento"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Top"
                    Height="45" 
                    FontSize="15" Margin="14,291,387,0"/>



                <StackPanel  Margin="424,65,10,10">
                    <TextBox
                        x:Name="txtHistoriaClinica"
                        Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                        VerticalAlignment="Top"
                        Height="420"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Historia Clinica"/>
                </StackPanel>
                <DatePicker
                    Name="LocaleDatePicker"
                    Width="120"
                    materialDesign:HintAssist.Hint="Proxima Cita" Margin="16,347,664,128" />

                <Button 
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Width="290"
                    FontSize="19"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" 
                    Margin="62,454,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36">


                    GUARDAR HISTORIA CLINICA
                </Button>

            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
